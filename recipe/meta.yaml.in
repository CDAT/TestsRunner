package:
  name: testsrunner
  version: 8.2.1.rc1

source:
  url: https://github.com/CDAT/testsrunner/archive/v8.2.1.rc1.tar.gz
  sha256: bddeb00e2293a53824f5e68a60f155a61c724d84ac66298128ca9b88f2eee796

build:
  number: 0
  skip: True  # [win]
  script: python setup.py install
  noarch: python

requirements:
  build:
    - python
    - setuptools
  run:
    - python
    - requests
    - jinja2
    - cdp
    - nose
    - flake8

test:
  imports:
    - testsrunner

about:
  home:  http://github.com/cdat/testsrunner
  license: BSD 3-Clause
  summary: 'Generic Test Suite Runner'
  description: A set of tools to run nose-based test suites and generate reports
  license: BSD
  license_file: bsd-3-clause.txt

extra:
  recipe-maintainers:
    - doutriaux1
