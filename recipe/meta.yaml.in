{% set name = "testsrunner" %}

package:
  name: {{ name|lower }}
  version: 8.2.1

source:
  url: https://github.com/CDAT/testsrunner/archive/v8.2.1.tar.gz
  sha256: 65da2777350d81d08098070e96e1239e5f4a1aebd98446bbb10298660014116d

build:
  number: 0
  skip: True  # [win]
  script: python setup.py install
  noarch: python

requirements:
  build:
    - python
    - setuptools
  run:
    - python
    - requests
    - jinja2
    - cdp
    - nose
    - flake8

test:
  imports:
    - testsrunner

about:
  home:  http://github.com/cdat/testsrunner
  license: BSD 3-Clause
  summary: 'Generic Test Suite Runner'
  description: A set of tools to run nose-based test suites and generate reports
  license: BSD
  license_file: bsd-3-clause.txt

extra:
  recipe-maintainers:
    - doutriaux1
